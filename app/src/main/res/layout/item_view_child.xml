<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/selected_selector">

    <ImageView
        android:id="@+id/item_view_child_iv_list"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/list_modified"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"/>

    <TextView
        android:id="@+id/item_view_child_tv"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:text="תצוגת ילד"
        android:textColor="@color/color_grey_blue"
        android:textSize="15sp"
        android:gravity="center_vertical|start"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/item_view_child_iv_list"/>

    <ImageView
        android:id="@+id/item_view_child_x_iv"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:visibility="gone"
        android:src="@mipmap/x"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="7dp"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:id="@+id/item_view_child_on_x_rv"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true" />

</RelativeLayout>