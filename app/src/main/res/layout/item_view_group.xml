<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_view_groups_relative_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/selected_selector">

    <ImageView
        android:id="@+id/item_view_groups_relevant_icon"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:src="@mipmap/silver_folder"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/item_view_groups_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Inbox"
        android:textSize="20sp"
        android:textColor="@color/color_grey_blue"
        android:textAlignment="viewStart"
        android:gravity="center_vertical|start"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:maxLines="1"
        android:layout_toEndOf="@id/item_view_groups_relevant_icon"
        android:layout_toStartOf="@id/item_view_groups_image_arrow" />

    <ImageView
        android:id="@+id/item_view_groups_image_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:src="@android:drawable/ic_menu_more"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="20dp"/>

    <RelativeLayout
        android:id="@+id/item_view_groups_on_x_rv"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true" />

</RelativeLayout>